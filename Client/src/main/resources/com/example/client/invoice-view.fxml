<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.InvoiceController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="customer_id" text="1" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button fx:id="collectData" prefHeight="26.0" prefWidth="88.0" text="Collect data" />
         <Pane prefHeight="100.0" prefWidth="28.0" />
      </children>
   </HBox>
   <Label fx:id="statusLabel" prefHeight="18.0" prefWidth="85.0" text="Status will be shown here" />
</VBox>
